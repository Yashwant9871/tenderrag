# DeepInfra
DEEPINFRA_TOKEN=
DEEPINFRA_BASE=https://api.deepinfra.com/v1/openai
DEEPINFRA_VECTOR_SIZE=1536

# DB
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=tender
POSTGRES_PASSWORD=tenderpass
POSTGRES_DB=tenderdb
DATABASE_URL=postgresql+asyncpg://tender:tenderpass@postgres:5432/tenderdb

# Redis (also used by celery)
REDIS_URL=redis://redis:6379/0

# Qdrant
QDRANT_URL=http://qdrant:6333
COLLECTION=tenders

# Celery
CELERY_QUEUE=ingest_queue

# MinIO
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=tender-uploads

# App
UPLOAD_DIR=.data
MAX_UPLOAD_SIZE=52428800
CORS_ORIGINS=http://localhost:3000
SECRET_KEY=change_me

# Prometheus
PROMETHEUS_ENABLED=true
TOKENIZER_NAME=BAAI/bge-large-en-v1.5
